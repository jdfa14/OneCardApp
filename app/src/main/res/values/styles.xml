<resources>
    <style name="myAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:shadowDx" >1.5</item>
        <item name="android:shadowDy" >1.5</item>
        <item name="android:shadowRadius" >1</item>
        <item name="android:shadowColor" >#AAAAAA</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="text_header" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_subheader">
        <item name="android:textAllCaps">true</item>
        <item name="android:height">48dp</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="card_default" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="cell_header_left" parent="cell_header">
        <item name="android:background">@drawable/background_cell_header_left</item>
    </style>

    <style name="cell_header_right" parent="cell_header">
        <item name="android:background">@drawable/background_cell_header_right</item>
    </style>

    <style name="cell_header" parent="cell_basic">
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_cell_header_default</item>
    </style>

    <style name="cell_basic">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_cell</item>
    </style>

    <style name="cell_waring" parent="cell_basic">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_cell_warning</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>